                              <Insets left="10.0" right="20.0" top="20.0" />
                           </HBox.margin>
                        </TextField>
                        <Button fx:id="simula" mnemonicParsing="false" onAction="#doSimula" text="Simula" textAlignment="CENTER">
                           <HBox.margin>
